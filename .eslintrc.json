{
  "extends": "next/core-web-vitals",
  "rules": {
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "semi": "warn",
    "newline-after-var": "warn",
    "sort-imports": "warn",
    "array-bracket-newline": "warn",
    "no-alert": "error",
    "no-console": "error",
    "no-duplicate-imports": "error",
    "no-unused-vars": "error",
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ]
  }
}